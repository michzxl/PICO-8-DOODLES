		if rnd(1)<1 then
			c=7
		end
	else
		c=0
	end

	circ(x,y,1,c)
end

for x=0,128,12 do
	for y=0,128,16 do
		y=y-(0.005+sin(t/32)*0.0005)*sqr(x-64-sin(t/32)*4)
		circ(x,y+1,4,7)
		circfill(x,y,4,0)
	end
end

