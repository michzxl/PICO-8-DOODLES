version 29
__lua__
dt=0.0333
t=0

cls()
::♥::
--cls()
t+=dt
mx,my=stat(32),stat(33)

for i=1,1000 do
	y=rnd(128)-64
	x=rnd(128)-64
	
	c=
		 sin(y/600 + sin(t/20) + 1)
		+flr((x-t*6)/40)
		+sin(x/80)
		+cos(y/56)
		+t*2

	c=flr(c%4)*3.5 -- [1,14]
	local fill = nil
	if c==3.5 or c==7+3.5 then
		fill = 0b1010010110100101.1
		c = 0x0
	end
	
	fillp(fill)
	circ(x+64,y+64,1,c)
	fillp()
end

flip() goto ♥
