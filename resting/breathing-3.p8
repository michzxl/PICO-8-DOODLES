pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
t=0
k=sqrt(2)
pal(1,7,1)
::♥::
t+=1/30



for i=1,1150 do
	ang,r=rnd(1),rnd(64*k)
	r2=sqrt(r)*10
	
	sa,ca=sin(ang),cos(ang)
	
	x,y=r*ca,r*sa
	x2,y2=r2*ca,r2*sa
	st8=sin(t/8)
	
	c=0
	maxr=30 + 5*st8
	if r<maxr then
		a=15 + 10*(st8+1)+y/16
		c=flr((x+y)/a)
		 +(sin(t/16)*3*x+y)/a

		

		c=c+flr(y/128+t/3)
		 

		c=c+x/16+t/2
		c=c%2+0
	end
	
	circ(x2+64+cos(t/2)*2,y2+64+sin(t)*2,1,c)
end

flip() goto ♥
