		x,y,x-8-ff(x,y),y+8-4*sin(t/8)+cos(t/16)
	})
end

-- DRAW THE LINES
for key,ln in ipairs(lines) do

	line2(ln[1],ln[2],ln[1] - ln[3] + (ln[2]-64)/2+64,ln[4],7)

	-- CONNECTING LINES BETWEEN EACH ARROW
