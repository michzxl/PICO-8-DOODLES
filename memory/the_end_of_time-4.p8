unit=5+sin(t/16)*2
ox=64
lines = {}
for y=pos%unit-1-16,128+unit,unit do
	x = ox + 4*sin(t + y/32)
	y = y + 4*sin(y/32 + t)

	
	x = x + sin(t/16)*16 * sin(t/16 + y/64)
+y/128
	add(lines, {
